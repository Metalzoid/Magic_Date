  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 form-container">
        <div class="text-center mb-4" style="background: transparent;">
          <%= cl_image_tag @offer.user.photo.key, height: 150, gravity: "face", crop: "fill", style: "border-radius: 50%" %>
          <h4 class="my-2"><%= @offer.user.name %></h4>
        </div>
        <h2 class="text-center mb-4">Votre commande</h2>
        <%= simple_form_for [@offer, @booking] do |f| %>
          <%= f.input :start_date , label: "Date de début" %>
          <%= f.input :end_date , label: "Date de fin" %>
          <%= f.input :comment , label: "Commentaire", as: :text %>
          <%= f.input :total_price, label: "Prix total :", input_html: { value: @offer.price} %>
          <%= f.button :submit, class: "btn btn-purple", value: "Créer votre commande" %>
        <% end %>
      </div>
    </div>
  </div>
