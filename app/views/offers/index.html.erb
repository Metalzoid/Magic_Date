<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Trouve ton Charo</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Liste des profils</h3>
      <% if user_signed_in? %>
        <%= link_to "Créer une offre", new_offer_path, class: "btn btn-purple border-radius-lg border-white" if current_user.role == "vendor"%>
      <% end %>
 </div>
  <div class="row pt-5">
    <% @offers.each do |offer| %>
      <div class="card col-12 col-sm-6 col-md-4 col-xl-3 mb-3 d-flex align-items-stretch">
        <%= link_to offer_path(offer), class: "text-decoration-none text-white" do %>
          <div class="border-radius w-100 h-100">
              <div class= "card-top">
                <div style="height: 400px; width: 100%; background-repeat: no-repeat; background-size: cover; background-image: url('<%= cl_image_path offer.user.photo.key, transformation: { dpr: "auto", responsive: true, width: "auto", crop: "scale", gravity: :face} %>')"></div>
                <div class= "image-name fs-4"><%= offer.user.name %></div>
              </div>
              <div class= "card-bottom1">
                <div style="height: 200px" class="card-body bg-purple">
                    <h5 class="card-title"><%= offer.title %></h5>
                    <p class="card-description"><%= offer.description %></p>
                </div>
              </div>
              <div class= "card-bottom2 bg-purple">
                <p class="card-price d-flex flex column justify-content-end mt-auto p-2"><%= offer.price %> € / jour</p>
              </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
