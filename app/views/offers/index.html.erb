<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center">
    <h1>Liste de toutes les offres</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a new offer", new_offer_path, class: "btn btn-primary" %>
 </div>
  <div class="row">
    <% @offers.each do |offer| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to offer_path(offer) do %>
          <div class="card">
            <%= cl_image_tag offer.user.photo.key, class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= offer.title %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
